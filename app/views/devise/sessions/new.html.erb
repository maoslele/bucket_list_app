<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1><%= t('.sign_in') %></h1>
      <div class="field">
        <div class="box-email">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="field">
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password %><br />
          </div>
          <div class="column-right">
            <%= link_to :パスワードを忘れた場合, new_user_password_path %>
          </div>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
      </div>
      <div class="legal-text">
              続行することで、
              <%= link_to "利用規約", "#" %>
              および
              <%= link_to "プライバシー規約", "#" %>
              に同意するものとします。
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
      <% end %>

      <div class="box-login">
        <div class="actions">
          <%= f.submit t('.sign_in') %>
        </div>
      </div>
      <div class="box-newusr">
        <p><span>------------------------------------------------</span></p>
        <%= link_to "アカウントを作成", new_user_registration_path %>
      </div>
    <% end %>
  </div>
</div>